{
	"name": "vscode-altr",
	"displayName": "vscode-altr",
	"description": "vim-altr for VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:altr.switchToNextFile",
		"onCommand:altr.switchToPreviousFile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "altr.switchToNextFile",
				"title": "Altr: Switch to next file"
			},
			{
				"command": "altr.switchToPreviousFile",
				"title": "Altr: Switch to previous file"
			}
		],
		"configuration": {
			"title": "vscode-alter rules",
			"properties": {
				"altr.rules": {
					"type": "array",
					"default": [
						["package.json", "package-lock.json", "yarn.lock"],
						["app/models/%.rb", "spec/models/%_spec.rb", "spec/factories/%s.rb"]
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	}
}
